{% if button.non_interactive %}
	<div class="button-text button-text--non-interactive{{ button.icon ? ' button-text--has-icon' : '' }}{% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button-text--{{ button.size }}{% endif %}{% if button.theme %} button-text--{{ button.theme }}{% endif %}{% if button.background %} button-text--bg-{{ button.background }}{% endif %}{{ button.fit ? " button-text--fit" : "" }}{{ button.mobFit ? " button-text--mob-fit" : "" }}{{ button.loading ? "is-loading" : "" }}">
		{% if button.text %}
			<span class="button-text__text">{{ button.text }}</span>
		{% endif %}
		{% if button.icon %}
			<span class="button-text__icon">
				{% view '@icon' with {
					icon: button.icon
				} %}
			</span>
		{% endif %}
	</div>
{% else %}
	{% if button.href %}
		<a href="{{ button.href }}"
		   class="button-text{{ button.icon ? ' button-text--has-icon' : '' }}{% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button-text--{{ button.size }}{% endif %}{% if button.theme %} button-text--{{ button.theme }}{% endif %}{% if button.background %} button-text--bg-{{ button.background }}{% endif %}{% if button.disabled %} button-text--disabled{% endif %}{{ button.fit ? " button-text--fit" : "" }}{{ button.mobFit ? " button-text--mob-fit" : "" }}{{ button.loading ? "is-loading" : "" }}"{% if button.attr %} {{ button.attr }}{% endif %}{% if button.title %} title="{{ button.title }}"{% endif %}>
			{% if button.text %}
				<span class="button-text__text">{{ button.text }}</span>
			{% endif %}
			{% if button.icon %}
				<span class="button-text__icon">
					{% view '@icon' with {
						icon: button.icon
					} %}
				</span>
			{% endif %}
		</a>
	{% else %}
		<button type="{{ button.type?: 'button' }}"
				class="button-text{{ button.icon ? ' button-text--has-icon' : '' }} {% if button.class %} {{ button.class }}{% endif %}{% if button.size %} button-text--{{ button.size }}{% endif %}{% if button.theme %} button-text--{{ button.theme }}{% endif %}{% if button.background %} button-text--bg-{{ button.background }}{% endif %}{{ button.fit ? " button-text--fit" : "" }}{{ button.mobFit ? " button-text--mob-fit" : "" }}{{ button.loading ? "is-loading" : "" }}"{% if button.attr %} {{ button.attr }}{% endif %}{% if button.title %} title="{{ button.title }}"{% endif %}{% if button.disabled %} disabled{% endif %}>
			{% if button.text %}
				<span class="button-text__text">{{ button.text }}</span>
			{% endif %}
			{% if button.icon %}
				<span class="button-text__icon">
					{% view '@icon' with {
						icon: button.icon
					} %}
				</span>
			{% endif %}
		</button>
	{% endif %}
{% endif %}

