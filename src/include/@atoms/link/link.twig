{% if link.href %}
	<a href="{{ link.href }}"
	   class="link{% if link.class %} {{ link.class }}{% endif %}{% if link.theme %} link--{{ link.theme }}{% endif %}{% if link.background %} link--bg-{{ link.background }}{% endif %}{% if link.disabled %} link--disabled{% endif %}"{% if link.attr %} {{ link.attr }}{% endif %}{% if link.title %} title="{{ link.title }}"{% endif %}>
		{% if link.text %}
			<span class="link__text">{{ link.text }}</span>
		{% endif %}
	</a>
{% else %}
	<button type="{{ link.type?: 'button' }}"
			class="link{% if link.class %} {{ link.class }}{% endif %}{% if link.theme %} link--{{ link.theme }}{% endif %}{% if link.background %} link--bg-{{ link.background }}{% endif %}"{% if link.attr %} {{ link.attr }}{% endif %}{% if link.title %} title="{{ link.title }}"{% endif %}{% if link.disabled %} disabled{% endif %}>
		{% if link.text %}
			<span class="link__text">{{ link.text }}</span>
		{% endif %}
	</button>
{% endif %}


